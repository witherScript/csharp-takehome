@using Bakery.Models

<h1>Treats</h1>

@if (Model.Count == 0)
{
    <p>No Treats added.</p>
}

@foreach (Treat trt in Model)
{
  <li>@Html.ActionLink($"{trt.Name}", "Details", new { id = trt.TreatId }) </li>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>

@if (User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Add new treat", "Create")</p>
  @using (Html.BeginForm("LogOff", "Accounts"))
  {
    <input type="submit" class="btn btn-primary" value="Log out" />
  }
}
