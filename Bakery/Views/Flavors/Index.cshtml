@using Bakery.Models

<h1>Flavors</h1>

@if (Model.Count == 0)
{
    <p>No flavors added.</p>
}

@foreach (Flavor flav in Model)
{
  <li>@Html.ActionLink($"{flav.Name}", "Details", new { id = flav.FlavorId }) </li>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>


@if (User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Add new flavor", "Create")</p>
  @using (Html.BeginForm("LogOff", "Accounts"))
  {
    <input type="submit" class="btn btn-primary" value="Log out" />
  }
}
