@using Bakery.Models
@model Bakery.Models.Flavor

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>
@if(@Model.JoinEntities.Count == 0)
{
  <p>This Flavor is not assosciated with any treats yet!</p>
}
else
{
  <h4>This flavor is assosciated with the following treats:</h4>
  <ul>
    @foreach(FlavorTreat join in Model.JoinEntities)
    {
      
      <li>Treat: @join.Treat.Name</li>
      @using (Html.BeginForm("DeleteJoin", "Flavors"))
      {
        @Html.Hidden("joinId", @join.FlavorTreatId)
        <input type="submit" value="Delete"/>
      }
    }
  </ul>
}

@if(User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Add a Treat", "AddTreat", new {id = Model.FlavorId})</p>
  <p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
  <p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>
}
<p>@Html.ActionLink("Back to list", "Index")</p>